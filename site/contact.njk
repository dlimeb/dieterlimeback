<div class="max-w-4xl">
  <h1 class="dl-heading__secondary px-4 md:px-8">{{ title }}</h1>

  <div class="mt-12">
    <p class="dl-text__body px-4 md:px-8">Ready to get started? Book a spot on my calendar below.</p>

    <!-- Calendly inline widget begin -->
    <div class="calendly-inline-widget" data-url="https://calendly.com/dieterlimeback" style="min-width:320px;height:630px;"></div>
    <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js"></script>
    <!-- Calendly inline widget end -->
  </div>


  <div class="mt-12">
    <p class="dl-text__body px-4 md:px-8">Or, contact me using the form below.</p>

    <div class="bg-gray-100 my-12 p-8">
      <form name="Contact" method="POST" data-netlify="true" class="font-sans">
        <p class="mb-8 flex flex-col md:flex-row">
          <label class="dl-form__label block md:inline-block md:w-1/4 pt-4 md:ml-4 mr-4">Name <span class="text-red-500">*</span></label>
          <input class="dl-form__input block md:inline-block md:w-2/3" type="text" name="name" />
        </p>
        <p class="mb-8 flex flex-col md:flex-row">
          <label class="dl-form__label block md:inline-block md:w-1/4 pt-4 md:ml-4 mr-4">Email address <span class="text-red-500">*</span></label>
          <input class="dl-form__input block md:inline-block md:w-2/3" type="email" name="email" placeholder="you@example.com" />
        </p>
        <p class="mb-8 flex flex-col md:flex-row">
          <label class="dl-form__label block md:inline-block md:w-1/4 pt-4 md:ml-4 mr-4">Message </label>
          <textarea class="dl-form__input block md:inline-block md:w-2/3 h-32" name="message"></textarea>
        </p>
        <p class="mb-2 flex">
          <span class="hidden md:inline-block w-1/4 ml-4 mr-4"></span>
          <button class="dl-button dl-button__primary mt-2 w-full md:w-auto" type="submit">Send</button>
        </p>
      </form>
    </div>
  </div>
</div>
